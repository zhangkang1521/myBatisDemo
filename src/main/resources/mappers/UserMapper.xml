<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zk.dao.UserDao">

    <resultMap id="userResultMap" type="org.zk.model.User">
        <id column="id" property="id"></id>
        <result column="username" property="username"></result>
        <result column="interests" property="interests" typeHandler="org.zk.type.StringArrayTypeHandler"></result>
    </resultMap>

    <select id="findById" parameterType="int" resultMap="userResultMap">
        select * from tb_user where id = #{id}
    </select>

    <insert id="insert" parameterType="org.zk.model.User">
         INSERT INTO tb_user(username,interests) VALUES(#{username}, #{interests, typeHandler=org.zk.type.StringArrayTypeHandler})
    </insert>

</mapper>